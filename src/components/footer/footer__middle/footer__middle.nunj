<div class="footer__wrap">
	<div class="container">
		<div class="footer__middle">
			<div class="footer__nav">
				<ul class="nav__items">
					{% for item in navItems %}
						<li class="nav__item{% if item.classActive == "active" %} active{% endif %} ">
							<a href="{{ item.path }}" class="nav__link">{{ item.name }}</a>
						</li>
					{% endfor %}
				</ul>
			</div>
			<div class="footer__address">
				220020, Минск,<br> пр. Победителей, 100, оф. 200.
			</div>
		</div>
	</div>
</div>
